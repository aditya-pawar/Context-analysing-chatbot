    <style name="ChatViewDefault">

        <item name="inputBackgroundColor">@color/white</item>
        <item name="inputUseEditorAction">false</item>
        <item name="backgroundColor">@color/white</item>

        
        
        <item name="inputTextSize">@dimen/default_input_text_size</item>
        <item name="inputTextColor">@color/black</item>
        <item name="inputHintColor">@color/main_color_gray</item>

        
        <item name="sendBtnIcon">@drawable/mic_black</item>
        <item name="sendBtnIconTint">@color/white</item>
        <item name="sendBtnBackgroundTint">?attr/colorAccent</item>

        <item name="backgroundRcv">@color/default_chat_message_background_color_rcv</item>
        <item name="backgroundSend">@color/default_chat_message_background_color_send</item>

        <item name="bubbleElevation">elevated</item>
        <item name="bubbleBackgroundRcv">@color/default_bubble_color_rcv</item>
        <item name="bubbleBackgroundSend">@color/default_bubble_color_send</item>

        
        <item name="messageTextColorSend">@color/default_message_color_send</item>
        <item name="messageTextColorRcv">@color/default_message_color_rcv</item>
        <item name="messageTextSize">@dimen/default_message_text_size</item>

        
        <item name="tStampTextColorSend">@color/default_tstamp_color_send</item>
        <item name="tStampTextColorRcv">@color/default_tstamp_color_rcv</item>
        <item name="tStampTextSize">@dimen/default_timestamp_text_size</item>
    </style>
    <declare-styleable name="ChatView">

        <attr format="color" name="backgroundColor"/>
        <attr format="color" name="inputBackgroundColor"/>
        <attr format="boolean" name="inputUseEditorAction"/>
        <attr format="reference" name="inputTextAppearance"/>
        <attr format="dimension" name="inputTextSize"/>
        <attr format="color" name="inputTextColor"/>
        <attr format="string" name="inputHint"/>
        <attr format="color" name="inputHintColor"/>

        <attr format="reference" name="sendBtnIcon"/>
        <attr format="color" name="sendBtnIconTint"/>
        <attr format="color" name="sendBtnBackgroundTint"/>

        <attr format="color" name="backgroundRcv"/>
        <attr format="color" name="backgroundSend"/>

        <attr format="color" name="bubbleBackgroundRcv"/>
        <attr format="color" name="bubbleBackgroundSend"/>
        <attr name="bubbleElevation">
            <enum name="flat" value="0"/>
            <enum name="elevated" value="1"/>
        </attr>

        <!-- These are still yet unimplemented-->

        <attr format="reference" name="messageTextAppearance"/>
        <attr format="color" name="messageTextColorSend"/>
        <attr format="color" name="messageTextColorRcv"/>
        <attr format="dimension" name="messageTextSize"/>

        <attr format="reference" name="tStampTextAppearance"/>
        <attr format="color" name="tStampTextColorSend"/>
        <attr format="color" name="tStampTextColorRcv"/>
        <attr format="dimension" name="tStampTextSize"/>

    </declare-styleable>
